{
  "compilerOptions": {
    "declarationDir": "tmp/types",
    "noImplicitAny": false,
    "outDir": "tmp",
    "module": "esnext",
    "target": "ES2015",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": "./3Dmol",
  },
  "include": [
    "3Dmol/**/*.ts",
    "3Dmol/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "*.frag",
    "*.vert",
    "@types/estree",
    "@types/eslint"
  ],
  "typedocOptions": {
    "entryPoints": [
      "./3Dmol/index.ts",
      "./3Dmol/global.d.ts",
      "./3Dmol/WebGL/shaders/shaders.d.ts"
    ],
    "out": "doc/typescript"
  }
}