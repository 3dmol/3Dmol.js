{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-extend-native": ["error", {"exceptions": ["String"]}],
        "guard-for-in":"off",
        "no-restricted-syntax":"off",
        "consistent-return":"warn", 
        "no-param-reassign":"warn",
        "no-plusplus":["error", {"allowForLoopAfterthoughts": true}],
        "no-restricted-globals":"warn",
        "eqeqeq":["error", "smart"],
        "no-shadow":"warn",
        "no-useless-escape":"warn",
        "radix":"warn",
        "no-multi-assign":["warn", {"ignoreNonDeclaration":true}],
        "no-continue":"warn",
        "no-redeclare":["error", {"builtinGlobals": false}],
        "no-unused-vars":"warn",
        "prefer-destructuring":"warn",
        "prefer-spread":"warn", "prefer-rest-params":"warn",
        "no-unreachable-loop":["error", {"ignore":["ForInStatement"]}],// ignore all for-in loops
        "no-eval":"warn", // prevent using eval
        "no-self-assign":["error", {"props": false}],
        "prefer-const":["warn", {"ignoreReadBeforeAssign": true}],
        "no-prototype-builtins":"warn",
        "no-use-before-define":"warn",
        "no-lonely-if":"off",
        "no-underscore-dangle":"warn",
        "no-undef":"warn",
        "new-cap":["error", {"newIsCap": false, "capIsNew": false}],
        "no-bitwise":"off",// error", {"allow":["|=", "&", ">>", "<<", "~", "&=", "|", ">>>"]}],
        "no-unused-expressions":["error", {"allowTernary": true}],
        "array-callback-return":"warn",
        "import/no-unresolved":["error", {"caseSensitive":false}],
        "no-irregular-whitespace":["error", {"skipTemplates":true}]
    },
    "globals":{
        "$3Dmol": "writable",
        "$": false,
        "console":"writable",
        "require":"writable"
    }
}
