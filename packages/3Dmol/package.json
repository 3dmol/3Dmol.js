{
  "name": "3dmol",
  "version": "1.8.0",
  "description": "Object oriented Javascript molecular visualization library",
  "repository": {
    "type": "git",
    "url": "https://github.com/dkoes/3Dmol.js.git"
  },
  "author": "David Koes and contributors",
  "homepage": "http://3dmol.csb.pitt.edu",
  "jest": {
    "testRegex": [
      "./*\\.test.js$",
      "./*\\.test.ts$"
    ]
  },
  "license": "BSD-3-Clause",
  "main": "build/3Dmol-min.js",
  "dependencies": {
    "ini": "^2.0.0",
    "jquery": "^3.6.0",
    "netcdfjs": "^1.0.0",
    "pako": "^2.0.4",
    "upng-js": "^2.1.0",
    "yargs-parser": "^20.2.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.6",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-transform-typescript": "^7.18.8",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.18.6",
    "@types/estree": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.5",
    "babel-preset-minify": "^0.5.2",
    "del": "^6.0.0",
    "eslint": "^7.32.0",
    "file-loader": "^6.2.0",
    "glcheck": "3dmol/glcheck#master",
    "glob-parent": "^5.1.2",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-cli": "^2.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-jsdoc3": "^3.0.0",
    "gulp-jshint": "^2.1.0",
    "gulp-merge": "^0.1.1",
    "gulp-rename": "^2.0.0",
    "gulp-rollup": "^2.17.0",
    "gulp-shell": "^0.8.0",
    "gulp-terser": "^2.0.1",
    "gulp-uglify": "^3.0.2",
    "istanbul-combine": "^0.3.0",
    "jest": "^27.5.1",
    "jsdoc": "^3.6.10",
    "jsdom": "^19.0.0",
    "jshint": "^2.13.1",
    "prettier": "^2.7.1",
    "raw-loader": "^4.0.2",
    "terser-webpack-plugin": "^5.3.3",
    "ts-loader": "^9.3.1",
    "typedoc": "^0.23.9",
    "typescript": "^4.7.4",
    "url-loader": "^4.1.1",
    "webpack": "^5",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "4.9.3"
  },
  "scripts": {
    "build": "gulp && npm run doc",
    "prepare": "npm run build",
    "jest": "npx jest --coverage --coverage-directory=./tests/jest/coverage",
    "types": "jsdoc -t node_modules/tsd-jsdoc/dist -r 3Dmol/. -d types",
    "test": "npx jest && npm run glcheck",
    "glcheck": "npm run clean:glcheck && npm run generate:glcheck && npm run test:glcheck && npm run cov:glcheck",
    "test:glcheck": "npx glcheck --config ./tests/glcheck/glcheck.config.json",
    "clean:glcheck": "rm -rf ./tests/glcheck/render-failures",
    "generate:glcheck": "python3 ./tests/glcheck/generate_glcheck_render_tests.py",
    "cov:glcheck": "npx nyc report --reporter json --report-dir ./tests/glcheck/coverage",
    "coverage": "istanbul report --include ./tests/**/coverage/coverage-final.json html",
    "doc": "npx typedoc ./src/ts/main/index.ts"
  }
}
