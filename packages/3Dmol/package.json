{
  "name": "3dmol",
  "version": "2.0.0",
  "description": "Object oriented Javascript molecular visualization library",
  "repository": {
    "type": "git",
    "url": "https://github.com/dkoes/3Dmol.js.git"
  },
  "author": "David Koes and contributors",
  "homepage": "http://3dmol.csb.pitt.edu",
  "jest": {
    "testRegex": [
      "./*\\.test.js$",
      "./*\\.test.ts$"
    ],
    "setupFiles": [
      "jest-webgl-canvas-mock",
      "jsdom-worker"
    ],
    "coverageReporters": ["lcov", "text"]
  },
  "license": "BSD-3-Clause",
  "main": "build/3Dmol-min.js",
  "dependencies": {
    "ini": "^2.0.0",
    "jquery": "^3.6.0",
    "netcdfjs": "^1.0.0",
    "pako": "^2.0.4",
    "tsc": "^2.0.4",
    "upng-js": "^2.1.0",
    "yargs-parser": "^20.2.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-typescript": "^7.20.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "better-docs": "github:3dmol/better-docs#master",
    "canvas": "^2.11.0",
    "chromedriver": "^108.0.0",
    "codecov": "^3.8.3",
    "del": "^7.0.0",
    "eslint": "^7.32.0",
    "eslint-webpack-plugin": "^3.2.0",
    "glcheck": "github:3dmol/glcheck",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-webgl-canvas-mock": "^0.2.3",
    "jsdoc": "^4.0.0",
    "jsdom": "^20.0.3",
    "jsdom-worker": "^0.3.0",
    "nyc": "^15.1.0",
    "pug": "^3.0.2",
    "pug-code-gen": "^3.0.2",
    "raw-loader": "^4.0.2",
    "selenium-webdriver": "^4.7.1",
    "source-map-support": "^0.5.21",
    "taffydb": "^2.7.3",
    "terser-webpack-plugin": "^5.3.6",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^5.0.1"
  },
  "scripts": {
    "build": "webpack --config webpack.dev.js --mode development  && webpack --config webpack.prod.js --mode production && python3 tests/auto/generate_tests.py && npm run doc",
    "prepare": "npm run build",
    "jest": "npx jest --testPathIgnorePatterns=render.test.js",
    "test": "npm run generate:jest && npm run jest && npm run glcheck",
    "glcheck": "npm run clean:glcheck && npm run generate:glcheck && npm run test:glcheck",
    "test:glcheck": "npx glcheck --config ./tests/glcheck/glcheck.config.json",
    "clean:glcheck": "rm -rf ./tests/glcheck/render-failures",
    "generate:glcheck": "python3 ./tests/glcheck/generate_glcheck_render_tests.py -min",
    "generate:jest": "python3 tests/jest/generate_jest_render_tests.py",
    "cover": "npm run generate:jest && npx jest --coverage",
    "doc": "npx jsdoc -c jsdoc.conf.json src doc.md"
  }
}
